<%= partial "/partials/sidenav" %>
<article class="home-content">
	<section class="portfolio-grid">
		<% data.works.each do |work| %>
			<% link_to "/work/#{work.permalink}" do %>
				<figure class="grid-item lazyload type-<%= work.type %>" data-original="<%= work.image %>">
					<div class="overlay"></div>
					<div class="title"><%= work.title %><div>
				</figure>
			<% end %>
		<% end %>
	</section>
</article>
